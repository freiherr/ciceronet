<!DOCTYPE html>
<html>
<head>
  <title>Ciceronet</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<a href="#" class="navbar-brand">Ciceronet</a>
			<ul class="nav navbar-nav">
        		<li class="active"> <%=link_to "status",timeline_path %></li>
    		</ul>
    		<ul class = "nav navbar-nav pull-right">
    			<% if user_signed_in? %>
    				<li><%=link_to  current_user.nombre_completo, edit_user_registration_path %></li>
    				<li><%=link_to  "Cerrar sesión", cerrar_path %></li>
    			<% else %>
    				<li><%=link_to  "Registrar", registrar_path %></li>
    				<li><%=link_to  "Iniciar sesión", comenzar_path %></li>
    			<% end %>
    		</ul>
		</div>
	</div>

	<div class="container">


    <% flash.each do |type, message|%>
        <div class="alert <%=flash_class type %> alert-dismissible">     
          <%= message %>
          <button type="button" class "close" data-dismiss="alert" aria-hidden="true"> X</button>
        </div>
    <% end %>
      
		<%= yield %>
	</div>

</body>
</html>
